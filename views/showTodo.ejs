
<%- include('partials/header')%>
<body>

    <div class="container" style="margin-top: 10rem">
        <h1 class="text-center"><%= findItem.name%></h1>
        <div class="d-flex justify-content-center mt-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= findItem.name%>
                        <span class="badge bg-secondary float-right bg-warning text-dark"><%= findItem.category%></span>
                    </h5>

                    <hr>
                    <p class="card-text" style="width: 350px;"><%= findItem.description%></p>
                    <div class="d-flex justify-content-between">
                        <a href="/todo/<%= findItem._id%>/edit" class="btn btn-success">Edit</a>
                        <form action="/todo/<%=findItem._id%>?_method=DELETE" method="post" style="margin: 0 5px;">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        <form action="/todo/<%= findItem._id%>/completed" method="post" style="margin-right: 5px;">
                            <% if(findItem.done === true) {%>
                                <button class="btn btn-warning">Undone</button>
                            <%} else {%>
                                    <button class="btn btn-warning">Done</button>
                                <%}%>
                        </form>
                        <a href="/todo" class="btn btn-info">Back to List</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>
